    <script>
        // Valida√ß√£o do Login com as credenciais atualizadas
        document.getElementById('loginForm').addEventListener('submit', function(event) {
            event.preventDefault();
            const username = document.getElementById('username').value;
            const password = document.getElementById('password').value;
            const errorMessage = document.getElementById('error-message');

            // Credenciais atualizadas conforme solicitado
            if (username === 'Djila' && password === 'Djila2025baia') {
                document.getElementById('telaLogin').style.display = 'none';
                document.getElementById('modalReserva').style.display = 'flex';
                
                // Definir data/hora atual como padr√£o
                const now = new Date();
                const dateTimeString = now.toISOString().slice(0, 16);
                document.getElementById('dataHora').value = dateTimeString;
            } else {
                errorMessage.textContent = 'Usu√°rio ou senha incorretos!';
            }
        });

        // Restante do c√≥digo permanece igual...
        document.getElementById('reservaForm').addEventListener('submit', function(event) {
            event.preventDefault();
            const dataHora = document.getElementById('dataHora').value;
            const item = document.getElementById('item').value;
            const quantidade = document.getElementById('quantidade').value;
            const descricao = document.getElementById('descricao').value;
            
            alert(`‚úÖ Reserva confirmada!\n\nüçπ Item: ${item}\nüî¢ Quantidade: ${quantidade}\nüìÖ Data/Hora: ${dataHora}\nüìù Observa√ß√£o: ${descricao || "Nenhuma"}`);
            
            document.getElementById('reservaForm').reset();
        });

        document.getElementById('cancelButton').addEventListener('click', function() {
            if (confirm('‚ö†Ô∏è Tem certeza que deseja cancelar esta operasson?')) {
                document.getElementById('reservaForm').reset();
                alert('Operasson cancelada com sucesso!');
            }
        });
    </script>
